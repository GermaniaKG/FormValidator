{
	"name":        "germania-kg/formvalidator",

	"description":  "Callable for validating and filtering user inputs with convenient evaluation API.",

	"type":        "library",
	"license":     "MIT",

	"authors": [
		{
			"name":  "Carsten Witt",
			"email": "carstenwitt@germania-kg.de",
			"role":  "Developer"
		}
	],

  "autoload": {
      "psr-4": {
          "Germania\\FormValidator\\": "src/"
      }
  },

  "autoload-dev": {
      "psr-4": { "tests\\": "tests/src" }
  },

	"require": {
		"php": "^5.6|^7.0|^8.0",
		"psr/log": "^1.0",
		"psr/container": "^1.0",
		"psr/http-message": "^1.0"
	},

    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "phpspec/prophecy-phpunit": "^2.0",
        "php-coveralls/php-coveralls": "^2.0",
        "friendsofphp/php-cs-fixer": "^2.0",
        "spatie/phpunit-watcher": "^1.0",
        "phpstan/phpstan": "^0.12"
    },

    "scripts": {
          "phpunit": "phpunit --colors=auto",

          "test": [
              "@phpunit"
          ]
    }
}
