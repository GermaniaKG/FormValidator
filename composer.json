	"description":  "Callable for validating and filtering user inputs with convenient evaluation API.",

	"type":        "library",
	"license":     "MIT",

	"authors": [
		{
			"name":  "Carsten Witt",
			"email": "carstenwitt@germania-kg.de",
			"role":  "Developer"
		}
	],

  "autoload": {
      "psr-4": {
          "Germania\\FormValidator\\": "src/"
      }
  },

  "autoload-dev": {
